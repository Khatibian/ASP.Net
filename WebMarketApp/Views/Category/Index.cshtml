@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-center">
            <h4 class="text-light">لیست دسته بندی</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Creat" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> ایجاد دسته جدید
            </a>
        </div>

    </div>
    <br />
    <table class="table table-striped table-bordered" style="width : 100%">
        <thead>
            <tr>
                <th>
                    Name Of Type
                </th>
                <th>
                    Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



