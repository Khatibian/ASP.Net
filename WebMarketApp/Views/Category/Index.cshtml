@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    @if (TempData["Success"] != null)
    {
    <div class="text-end">
        <h3 class="text-danger">
            @TempData["Success"]
        </h3>
    </div>
    }

    <div class="row pt-4">
        <div class="col-6 text-center">
            <h4 class="text-light">لیست دسته بندی</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> ایجاد دسته جدید
            </a>
        </div>

    </div>
    <br />
    <table class="table table-striped table-bordered" style="width : 100%">
        <thead>
            <tr>
                <th>
                    Name Of Type
                </th>
                <th>
                    Order
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.ID"><i class="bi bi-pencil-fill"></i> ویرایش</a>
                        </div>
                        <br />
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.ID"><i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



